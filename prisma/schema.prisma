generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// ENUMS
// ============================================================================

enum UserRole {
  ADMIN    // Performancy staff - access to all companies
  DIRECTOR // Full company access
  MANAGER  // Squad access only
  AGENT    // Own data only
}

enum UserStatus {
  ACTIVE
  INACTIVE
  PENDING
}

enum LicenseType {
  AUTO_CRM      // Basic: Conversations, Settings, Playbook
  TREINAMENTO   // + Role Play, Chat
  ATIVIDADES    // + Inbox, Agenda, Performance, Pipeline, Insights
  AREA_RECEITA  // + Goals, Bots, Dashboard (ALL features)
}

enum DataScope {
  ALL     // All companies (ADMIN only)
  COMPANY // Entire company (DIRECTOR)
  SQUAD   // Only managed squad (MANAGER)
  OWN     // Only own data (AGENT)
}

// ============================================================================
// AUTH MODELS (NextAuth.js)
// ============================================================================

model Account {
  id                String  @id @default(cuid())
  user_id           String  @map("userId")
  type              String
  provider          String
  provider_account_id String @map("providerAccountId")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([provider, provider_account_id])
  @@map("accounts")
}

model Session {
  id            String   @id @default(cuid())
  session_token String   @unique @map("sessionToken")
  user_id       String   @map("userId")
  expires       DateTime

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================================================
// CORE MODELS
// ============================================================================

model User {
  id              String      @id @default(cuid())
  email           String      @unique
  email_verified  DateTime?   @map("emailVerified")
  password_hash   String?
  name            String
  image           String?
  role            UserRole    @default(AGENT)
  status          UserStatus  @default(PENDING)
  license_type    LicenseType @default(AUTO_CRM)
  company_id      String?
  squad_id        String?
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt

  // Relations
  company         Company?    @relation(fields: [company_id], references: [id])
  squad           Squad?      @relation("SquadMembers", fields: [squad_id], references: [id])
  managed_squads  Squad[]     @relation("SquadManager")
  accounts        Account[]
  sessions        Session[]
  audit_logs      AuditLog[]

  @@index([company_id])
  @@index([squad_id])
  @@index([email])
  @@map("users")
}

model Company {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  logo_url    String?
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  // Relations
  users       User[]
  squads      Squad[]
  licenses    CompanyLicense[]
  audit_logs  AuditLog[]

  @@map("companies")
}

model CompanyLicense {
  id           String      @id @default(cuid())
  company_id   String
  license_type LicenseType
  quantity     Int         @default(1)
  used         Int         @default(0)
  expires_at   DateTime?
  created_at   DateTime    @default(now())
  updated_at   DateTime    @updatedAt

  company Company @relation(fields: [company_id], references: [id], onDelete: Cascade)

  @@unique([company_id, license_type])
  @@map("company_licenses")
}

model Squad {
  id          String   @id @default(cuid())
  name        String
  company_id  String
  manager_id  String?
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  // Relations
  company Company @relation(fields: [company_id], references: [id], onDelete: Cascade)
  manager User?   @relation("SquadManager", fields: [manager_id], references: [id])
  members User[]  @relation("SquadMembers")

  @@index([company_id])
  @@map("squads")
}

// ============================================================================
// FEATURE & PERMISSION MODELS
// ============================================================================

model Feature {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  description String?
  menu_path   String?
  menu_icon   String?
  menu_order  Int      @default(0)
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  // Relations
  license_features  LicenseFeature[]
  role_permissions  RoleFeaturePermission[]

  @@map("features")
}

model LicenseFeature {
  id           String      @id @default(cuid())
  license_type LicenseType
  feature_id   String
  enabled      Boolean     @default(true)
  created_at   DateTime    @default(now())
  updated_at   DateTime    @updatedAt

  feature Feature @relation(fields: [feature_id], references: [id], onDelete: Cascade)

  @@unique([license_type, feature_id])
  @@map("license_features")
}

model RoleFeaturePermission {
  id         String    @id @default(cuid())
  feature_id String
  role       UserRole
  can_create Boolean   @default(false)
  can_read   Boolean   @default(true)
  can_update Boolean   @default(false)
  can_delete Boolean   @default(false)
  visibility DataScope @default(OWN)
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt

  feature Feature @relation(fields: [feature_id], references: [id], onDelete: Cascade)

  @@unique([feature_id, role])
  @@map("role_feature_permissions")
}

// ============================================================================
// AUDIT LOG
// ============================================================================

model AuditLog {
  id          String   @id @default(cuid())
  user_id     String
  company_id  String?
  action      String
  entity_type String
  entity_id   String?
  old_values  Json?
  new_values  Json?
  ip_address  String?
  user_agent  String?
  created_at  DateTime @default(now())

  user    User     @relation(fields: [user_id], references: [id])
  company Company? @relation(fields: [company_id], references: [id])

  @@index([user_id])
  @@index([company_id])
  @@index([entity_type, entity_id])
  @@index([created_at])
  @@map("audit_logs")
}
